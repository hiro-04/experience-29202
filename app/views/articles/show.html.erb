<div class="article-show">
  <div class="article-box">
    <h2 class="name">
      <%= @article.title %>
    </h2>

      <div class="article-content-box">
        <span class="article-content">
          <%= @article.content%>
        </span>
        <span class="article-post">
          記事内容
        </span>
      </div>

      <% if user_signed_in? && current_user.id == @article.user_id%>
        <%= link_to '記事の編集', edit_article_path(@article.id), method: :get, class: "article-red-btn" %>
        <p class='or-text'>or</p>
        <%= link_to '削除', article_path(@article.id), method: :delete, class:'article-destroy' %>
        <% end %>

    <%# 商品が売れていない場合はこちらを表示しましょう %>
        <% unless user_signed_in? && current_user.id == @article.user_id%>
         <%= link_to 'TOPページに戻る', articles_path,class:"article-red-btn"%>
        <% end %>
  </div>
  <div class="container">
    <% if current_user %>
      <%= form_with model: @comment, local: true do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2", class:"comment-btn" %>
        <%= form.submit "コメント"%>
      <% end %>
    <% else %>
      <strong><p> コメントするには新規登録orログインが必要です。</p></strong>
    <% end %>
    <div class="comments">
      <h4>【コメント一覧】</h4>
      <%= if @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %></strong>
          <%= comment.text%>
          </p>
     </div>
  </div>
</div>